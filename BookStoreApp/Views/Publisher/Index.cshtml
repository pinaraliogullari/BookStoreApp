@model List<PublisherViewModel>

<div class="container ">
    <div class="row">
        <div class="col-md-6">


            <div class="row">
                <div class="col-md-6">
                    <h3 class="display-6 mt-3">Publisher List</h3>
                </div>
                <div class="col-md-6">
                    <a
                        asp-area=""
                       class="btn btn-primary mt-4 d-flex justify-content-end "
                        asp-controller="Publisher"
                        asp-action="Create"
                        >Add more
                </a>
                </div>
            </div>
          
         
          <table class="table table-striped table-bordered">
              <thead>
                  <tr>
                      <td>Name</td>
                      <td>Action</td>
                  </tr>
              </thead>
              <tbody>
                    @foreach (var item in Model)
                   
                    {
                        <tr>
                            <td>@item.PublisherName</td>
                            <td>
                                <a asp-area=""
                                asp-controller="Publisher"
                                asp-action="Update"
                                class="btn btn-success float-end"
                                asp-route-id="@item.Id">
                                    <i class="fa-regular fa-pen-to-square"></i>
                            </a>
                                <a asp-area=""
                                   asp-controller="Publisher"
                                   asp-action="HardDelete"
                                   class="btn btn-danger float-end me-3"
                                   asp-route-id="@item.Id">
                                    <i class="fa-solid fa-trash-can"></i>
                               </a>
                            </td>
                        </tr>
                    }
              </tbody>
          </table>
          
        </div>
    </div>
</div>
