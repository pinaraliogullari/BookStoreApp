@model List<BookViewModel>

<div class="container w-100 ">
    <div class="row">
        <div class="col-md-12">


            <div class="row">
                <div class="col-md-6">
                    <h3 class="display-6 mt-3">Book List</h3>
                </div>
             
            </div>
          
         <div class="row w-100">
             <div class="col-md-12">
                    <table class="table table-striped table-bordered mt-5">
                        <thead>
                            <tr>
                                <td>Title</td>
                                <td>Genre</td>
                                <td>Isbn</td>
                                <td>Total Pages</td>
                                <td>Author</td>
                                <td>Publisher</td>
                                <td>Action</td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)

                            {
                                <tr>
                                    <td>@item.Title</td>
                                    <td>@item.Genre.Name</td>
                                    <td>@item.Isbn</td>
                                    <td>@item.TotalPages</td>
                                    <td>@item.Author.AuthorName</td>
                                    <td>@item.Publisher.PublisherName</td>
                                    <td>
                                        <a asp-area=""
                                           asp-controller="Book"
                                           asp-action="Update"
                                           class="btn btn-success"
                                           asp-route-id="@item.Id">
                                            <i class="fa-regular fa-pen-to-square"></i>
                                        </a>
                                        <a asp-area=""
                                           asp-controller="Book"
                                           asp-action="HardDelete"
                                           class="btn btn-danger"
                                           asp-route-id="@item.Id">
                                            <i class="fa-solid fa-trash-can"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="col-md-12">
                        <a asp-area=""
                           class="btn btn-primary mt-4 float-end "
                           asp-controller="Book"
                           asp-action="Create">
                            Add more
                        </a>
                    </div>
             </div>
         </div>
          
        </div>
    </div>
</div>
